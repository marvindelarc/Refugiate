<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#B0E0E6"
                android:gravity="center"
                android:text="Busqueda Avanzada"
                android:textColor="#313131"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="17sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:textColor="#313131"
                android:text="Tipo Hotel"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/rtbEstrellas"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                android:layout_gravity="center" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#313131"
                android:layout_marginTop="20sp"
                android:text="Puntaje Total:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />
         
            <RatingBar
                    android:id="@+id/rtbPuntos"
                    style="@style/rRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="0"
                    android:layout_gravity="center" />
                        
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#313131"
                android:layout_marginTop="20sp"
                android:text="Tipo Habitacion: "
                android:textSize="16sp" />

             <Spinner
                android:id="@+id/ComboTipoHabitacion"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#313131"
                android:layout_marginTop="10sp"
                android:text="Instalaciones"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="16sp" />

              <Spinner
                android:id="@+id/ComboInstalacion"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"/>

            <Button
                android:onClick="btnBuscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1E90FF"
                android:minHeight="30dip"
                android:layout_marginTop="15sp"
                android:text="Buscar"
                android:textSize="20sp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
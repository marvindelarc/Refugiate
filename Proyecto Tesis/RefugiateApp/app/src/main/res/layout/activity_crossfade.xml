<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contains the "content" view and its children. -->
    <ScrollView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Dummy content. -->
        <TextView style="?android:textAppearanceMedium"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textIsSelectable="true"
            android:padding="16dp" />

    </ScrollView>


    <!-- The "loading indicator" view. This view overlaps with
         the content, so the visibility of these two views
         should be mutually exclusive. -->
    <LinearLayout
        android:id="@+id/loading_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">
            <ProgressBar
                style="?android:progressBarStyleLarge"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/lblCargando"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="?colorPrimary"
            android:text="@string/app_name"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>



    <Button
        android:textColor="?android:textColorPrimaryInverse"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tabs"
        android:layout_marginTop="2dp"
        android:text="Prueba"
        android:textSize="16dp"
        android:onClick="btnDale"
        android:drawableLeft="@drawable/ic_action_perfil" />
</FrameLayout>

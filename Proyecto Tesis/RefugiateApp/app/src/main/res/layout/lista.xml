<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/fondo_background"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:background="@color/fondo_background"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcherd" />
    </LinearLayout>

            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
             android:layout_marginLeft="5dp"
            android:background="@color/lbl_letras"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lblTituloLista"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:typeface="monospace"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/lbl_negro" />
                    <TextView
                        android:id="@+id/lblDetalleLista"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:typeface="monospace"
                        android:textSize="11dp"
                        android:gravity="left"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/lbl_rojo" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btnLink"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/flecha"
                        android:gravity="right" />
                </LinearLayout>




            </LinearLayout>



 </LinearLayout>
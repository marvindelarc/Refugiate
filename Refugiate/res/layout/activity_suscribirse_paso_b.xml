<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0E0E6"
            android:textColor="#313131"
            android:paddingTop="3dp"
            android:text="Paso 2: Preferencias y Seguridad"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0E0E6"
            android:textColor="#313131"
            android:text="Deben completarse todos los campos que no sean opcionales"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0E0E6"
            android:textColor="#313131"
            android:paddingTop="5dp"
            android:text="Inscripcion en Refugiate"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0E0E6"
            android:textColor="#313131"
            android:paddingBottom="2dp"
            android:text="(Opcional)"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="#313131"
            android:text="Bienbenido a refugiate (Ver Información)"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="#313131"
            android:text="Terminos y condiciones de Refugiate (Ver Información)"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="#313131"
            android:text="Al Inscribirse acepta los terminos y condiciones del programa en su totalidad."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/chbCodiciones"
            android:textColor="#313131"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Condicones y Terminos de Refugiate"/>        
        
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0E0E6"
            android:paddingTop="5dp"
            android:textColor="#313131"
            android:text="Preferecias de comunicacion"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0E0E6"
            android:textColor="#313131"
            android:paddingBottom="2dp"
            android:text="(Opcional)"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/chbInformacion"
            android:textColor="#313131"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desea recibir por correo electronico cupones exclucivos, ofertas e informacion atrabes de Refugiate."/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#313131"
            android:background="#B0E0E6"
            android:paddingBottom="2dp"
            android:paddingTop="5dp"
            android:text="Establecer Contraseña"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="17sp" />

        <TextView
            android:textColor="#313131"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu contraseña debe ser como mino de 6 caracateres y dene contener nuemero y letras."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="#313131"
            android:text="Contraseña: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <EditText
                android:id="@+id/txtContraseniaRegistroPasoB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:inputType="textPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ems="10"/>
                
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#313131"
            android:paddingTop="5dp"
            android:text="Confirmar Contraseña:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp" />

        <EditText
                android:id="@+id/txtContraseniaConfirmarRegistroPasoB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:inputType="textPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:ems="10"/>


        <Button
            android:onClick="btnEnviarRegistroPasoB"            
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/agregar_usuarios"
            />
    </LinearLayout>
</ScrollView>